<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfApp"
        xmlns:vms="clr-namespace:TestWpfApp.ViewModels"
        mc:Ignorable="d"
        FontSize="24"
        Title="Заголовок"        
        Height="450" Width="800">
    <Window.Resources>
        <vms:ViewModelsLocator x:Key="locs" />
    </Window.Resources>
    <Grid>
        <Grid.Resources>
        </Grid.Resources>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="getData">GetData</Button>
            <TextBlock x:Name="data" Text="{Binding MainWindowViewModel.Title, Source={StaticResource locs}}"/>
        </StackPanel>
    </Grid>
</Window>
